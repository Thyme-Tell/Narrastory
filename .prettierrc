{
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 80,
    "bracketSpacing": true,
    "plugins": ["./node_modules/prettier-plugin-twig-melody"],
    "overrides": [
		{
			"files": "**/*.html",
			"options": {
				"parser": "melody"
			}
		}
	],
    "twigMultiTags": [
        "nav,endnav",
        "switch,case,default,endswitch",
        "ifchildren,endifchildren",
        "cache,endcache"
    ]
  }
